<Application x:Class="Tumbleweed.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Tumbleweed"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <FontFamily x:Key="RCL">Pack://application:,,,/Resources/Fonts/#RobotCondensed-Light</FontFamily>
            <FontFamily x:Key="ICON">Pack://appliaction:,,,/Resources/Fonts/#iconfont</FontFamily>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/ButtonStyle.xaml" />
                <ResourceDictionary Source="/Resources/Styles/ScrollBarStyle.xaml" />
                <ResourceDictionary Source="/Resources/Styles/SilderStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
