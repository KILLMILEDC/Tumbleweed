<Window x:Class="Tumbleweed.PromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tumbleweed"
        mc:Ignorable="d"
        Title="PromptWindow" Height="250" Width="620"
        Background="#CC1E785E" Opacity="1" WindowStyle="None" AllowsTransparency="True"
        FontFamily="{StaticResource RCL}" FontSize="30" WindowStartupLocation="CenterScreen" ShowInTaskbar="False"
        >
    <Canvas>
        <TextBlock x:Name="PromptF" Width="600" FontSize="20" Margin="10, 70, 10, 0" Foreground="#FF283B42" Text="YOU'VE BEEN WORKING FOR 03 HOURS 00 MINUTES," HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" FontWeight="Bold"/>
        <TextBlock x:Name="PromptS" Width="600" FontSize="25" Margin="10, 110, 10, 0" Foreground="#FF283B42" Text="NOW YOU CAN TAKE A BREAK." HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" FontWeight="Bold"></TextBlock>
        <Button x:Name="PromptButton" Width="220" Margin="200"  Style="{StaticResource Prompt}" Click="Button_Click" Background="{x:Null}" Content="Got it." BorderBrush="{x:Null}" HorizontalAlignment="Center" VerticalAlignment="Center"></Button>
    </Canvas>
</Window>
